.container {
  display: flex;
  height: 100vh;
  flex-direction: column;
  align-items: center;
  background-image: linear-gradient(to bottom, #1bbcb6 0%, #1bbcb6 22%, #fff 50%);
}
.container .header {
  margin-top: 150rpx;
  margin-bottom: 42rpx;
}
.container .header .img {
  width: 526rpx;
  height: 150rpx;
}
.container .login {
  width: 708rpx;
  height: 556rpx;
  display: flex;
  flex-direction: column;
  background: #fff;
  box-shadow: 0 2rpx 76rpx 0 rgba(4, 79, 83, 0.12);
  border-radius: 26rpx;
}
.container .login .span {
  font-size: 48rpx;
  color: #0b5855;
  letter-spacing: 3rpx;
  font-weight: bold;
  margin-left: 50rpx;
  margin-top: 36rpx;
}
.container .login .form {
  display: flex;
  flex-direction: column;
  margin-left: 66rpx;
  margin-top: 40rpx;
}
.container .login .form .userName {
  display: flex;
  justify-content: flex-start;
  margin-bottom: 40rpx;
}
.container .login .form .vCode {
  position: relative;
  display: flex;
  justify-content: flex-start;
  margin-bottom: 40rpx;
}
.container .login .form .vCode .btn {
  position: absolute;
  left: 382rpx;
  top: -20rpx;
  width: 212rpx;
  height: 66rpx;
  background: #f5fdfd;
  border: 2rpx solid #1bbcb6;
  border-radius: 33rpx;
  font-size: 32rpx;
  color: #1bbcb6;
  letter-spacing: 2rpx;
  text-align: center;
  line-height: 66rpx;
  z-index: 2;
}
.container .login .form .userPassword {
  display: flex;
  justify-content: flex-start;
}
.container .login .form .img {
  width: 42rpx;
  height: 42rpx;
}
.container .login .form .input {
  width: 510rpx;
  margin-left: 25rpx;
  margin-bottom: 40rpx;
  padding-bottom: 22rpx;
  border-bottom: 2rpx solid rgba(151, 151, 151, 0.14);
}
.container .login .form .placeholder {
  opacity: 0.48;
  font-size: 32rpx;
  color: #333333;
  letter-spacing: 2rpx;
  font-weight: 400;
}
.container .submit {
  position: relative;
  width: 620rpx;
  height: 116rpx;
  background: #1bbcb6;
  box-shadow: 0 20rpx 50rpx 0 rgba(0, 129, 136, 0.27);
  border-radius: 30rpx;
  font-size: 16px;
  color: #ffffff;
  letter-spacing: 2rpx;
  text-align: center;
  line-height: 116rpx;
  margin-top: 72rpx;
}
.container .submit .icon {
  position: absolute;
  display: flex;
  align-items: center;
  justify-content: center;
  right: 35rpx;
  top: 35rpx;
  width: 50rpx;
  height: 50rpx;
  background: #008188;
  border-radius: 50rpx;
}
.container .submit .icon .img {
  width: 38rpx;
  height: 38rpx;
}
.container .span {
  margin-top: 20rpx;
  color: #1bbcb6;
  font-size: 28rpx;
}